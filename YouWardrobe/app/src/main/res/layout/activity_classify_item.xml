<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--android:foreground="?android:attr/selectableItemBackgroundBorderless"-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp"
        android:id="@+id/cardView_takephotos"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/iv_user_classify_des"
            android:src="@mipmap/banner_loading"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ShowTv3"
            android:id="@+id/tv_user_classify_title"
            android:layout_gravity="center_horizontal"
            android:text="风格描述：美丽漂亮大方"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ShowTv3"
            android:id="@+id/tv_user_classify_size"
            android:layout_gravity="center_horizontal"
            android:text="L/XL/XLL"/>
    </LinearLayout>


</LinearLayout>

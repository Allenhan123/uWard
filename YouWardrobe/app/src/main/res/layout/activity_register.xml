<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_logo_text"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_logo"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:layout_marginTop="80dp"
        android:id="@+id/ll_text"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="13sp"
                    android:hint="手机号"
                    android:drawableLeft="@mipmap/login_user_icon"
                    android:drawablePadding="5dp"
                    android:textColor="#ffffff"
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="13sp"
                    android:hint="验证码"
                    android:drawableLeft="@mipmap/login_user_icon"
                    android:drawablePadding="5dp"
                    android:textColor="#ffffff"
                    android:id="@+id/et_verify"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp"
                    />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_sendSms"
                android:paddingTop="8dp"
                android:text="获取验证码"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <android.support.design.widget.TextInputLayout
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="13sp"
                    android:hint="密码"
                    android:drawableLeft="@mipmap/login_pas_icon"
                    android:drawablePadding="5dp"
                    android:textColor="#ffffff"
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPassword"
                    android:background="@drawable/selector_bg_edit"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:paddingBottom="2dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:background="@mipmap/login_btn"
        android:layout_below="@+id/ll_text"
        android:layout_margin="60dp"
        android:textColor="#e97220"
        style="@style/ShowTv2"
        android:id="@+id/btn_register"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

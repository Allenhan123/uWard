<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--防止启动白屏-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->

        <!-- Dialog属性 -->
        <item name="android:dialogTheme">@style/PandaTheme.Dialog</item>
    </style>

    <!--Dialog主题-->
    <style name="PandaTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 自己想要的背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <!--动画-->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_from_bottom</item>
    </style>

    <!--注册文本样式-->
    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>


    <style name="AppBlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ShowTv5">
        <item name="android:textSize">10sp</item><!--次要辅助-->
    </style>

    <style name="ShowTv4">
        <item name="android:textSize">12sp</item><!--辅助字号-->
    </style>

    <style name="ShowTv3">
        <item name="android:textSize">14sp</item><!--正文字号-->
    </style>

    <style name="ShowTv2">
        <item name="android:textSize">17sp</item><!--文章标题-->
    </style>

    <style name="ShowTv1">
        <item name="android:textSize">18sp</item><!--标题栏-->
    </style>

    <style name="ShowTv0">
        <item name="android:textSize">22sp</item><!--标题栏-->
    </style>


    <style name="color_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>

    <!--我的页面-->
    <style name="My_Item_container">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="My_Item_Text" parent="ShowTv3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="My_Item_Text_tip" parent="ShowTv3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="SwipeFling">
        <item name="rotation_degrees">15</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">4</item>
    </style>

    <style name="RatingBar1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">16dp</item>
    </style>
</resources>
